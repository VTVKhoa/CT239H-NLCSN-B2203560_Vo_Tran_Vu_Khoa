<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .containercss {
            margin: 50px;
            background: #fff url(https://i.ibb.co/x7SpXXZ/squares4.png) 12px 2px no-repeat;
            width: 160px;
            overflow: hidden;
        }

            .containercss input {
                letter-spacing: 20px;
                font-family: "Courier New", Courier, monospace;
                font-size: 150%;
                font-weight: bold;
                height: 30px;
                padding-left: 20px;
                padding-right: 20px;
                width: 160px;
                border: 0;
                background-color: transparent;
                outline: 0;
            }
    </style>

    @{
        string avatar = "blank.jpg";
        if (Session["user"] != null)
        {
            A23017_Cloud.Models.User user = (A23017_Cloud.Models.User)Session["user"];
            avatar = user.Avatar;
        }
    }
</head>
<body>
    <iframe id="musicFrame" src="@Url.Action("Music", "Home")" style="position: fixed; bottom: -100px; width: 1px; height: 1px; border: none;"></iframe>

    @{
        if (@Session["Username"] == null)
        {
            <div class="row ms-2 mt-2">
                <div class="col">
                    <a href="/Home/Index" class="btn btn-outline-dark" style="width: 120px; height: 60px; font-size: 30px; font-weight: bold">Home</a>
                </div>
                <div class="col text-end me-2 mt-2">
                    <a href="/Users/Login" class="btn btn-outline-dark" style="width: 120px; height: 60px; font-size: 30px; font-weight: bold">Login</a>
                    <a href="/Players/Create" class="btn btn-dark" style="width: 140px; height: 60px; font-size: 30px; font-weight: bold">Register</a>
                </div>
            </div>
        }
        else if (Session["role"].Equals("player"))
        {
            <div class="row ms-2 mt-2">
                <div class="col">
                    <a href="/Home/Index" class="btn btn-outline-dark" style="width: 120px; height: 60px; font-size: 30px; font-weight: bold">Home</a>
                </div>
                <div class="col text-end me-2 mt-2">
                    <a href="/Players/Details/@Session["Username"]">
                        <img src="~/Assets/img/avatar/@avatar" width="50" height="50" style="border: 1px solid black ;border-radius: 50%; object-fit: cover;" />
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="row ms-2 mt-2">
                <div class="col">
                    <a href="/Users/Admin" class="btn btn-outline-dark" style="width: 120px; height: 60px; font-size: 30px; font-weight: bold">Home</a>
                </div>
                <div class="col text-end me-2 mt-2">
                    <a href="/Users/Details/@Session["Username"]">
                        <img src="~/Assets/img/avatar/@avatar" width="50" height="50" style="border: 1px solid black ;border-radius: 50%; object-fit: cover;" />
                    </a>
                </div>
            </div>
        }
    }


    <div>
        @RenderBody()
    </div>

    <script>
        window.addEventListener("load", () => {
            let frame = document.getElementById("musicFrame");
            frame.contentWindow.postMessage("play", "*");
        })
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/d5cb94dd05.js" crossorigin="anonymous"></script>
    <script src="~/Assets/animeJS/anime.min.js"></script>
</body>
</html>
